<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoeducacion"
    android:orientation="vertical"
    tools:context=".Congratulations">


    <TextView
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"

        android:layout_marginLeft="40dp"
        android:layout_marginTop="100dp"
        android:text="Congratulations to you, this is your learning style: "
        android:textSize="28sp" />

    <TextView

        android:id="@+id/estiloAprendizajeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="160dp"
        android:padding="20dp"
        android:text="(Learning Style)"
        android:textSize="22sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="15pt"
        android:src="@drawable/certificado" />

    <TextView
        android:layout_width="345dp"
        android:layout_height="143dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="420dp"
        android:gravity="bottom|center_vertical"
        android:padding="20dp"
        android:text="Now we can help you.
 Press next to start assistance."
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnNextC"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="50dp"
        android:text="Next"
        android:textSize="20dp"
        />


</FrameLayout>