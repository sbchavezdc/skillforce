<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondodentro"
    android:orientation="vertical"
    tools:context=".Agenda_Notas">


        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:translationX="98dp"
            android:translationY="650dp"
          />

        <Button
            android:id="@+id/btncanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:translationX="238dp"
            android:translationY="650dp"
             />



        <TextView
            android:id="@+id/TexAgenda"
            android:layout_width="240dp"
            android:layout_height="84dp"
            android:gravity="center"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="95dp"
            android:textSize="25sp"
            android:text="Add Task"></TextView>

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="290dp"
            android:layout_height="210dp"
            android:layout_marginTop="50dp"
            android:hint="task..."
            android:translationX="80dp"
            android:translationY="160dp" />



</FrameLayout>